<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amareshiitd.complaintapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".navigation_drawer"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".complaint_details"
            android:label="@string/title_activity_complaint_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".add_a_user"
            android:label="@string/title_activity_add_a_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".delete_a_user"
            android:label="@string/title_activity_delete_a_user"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".modify_a_user"
            android:label="@string/title_activity_modify_a_user"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
