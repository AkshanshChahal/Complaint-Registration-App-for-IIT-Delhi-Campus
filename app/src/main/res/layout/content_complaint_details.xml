<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complaint Name"
            android:id="@+id/complaint_name"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_columnSpan="4"
            android:textColor="#090fb8"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:id="@+id/user"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:textColor="#080707" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/date"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="right"
            android:textColor="#080707" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/description"
            android:layout_row="2"
            android:layout_column="1"
            android:textAlignment="center"
            android:layout_gravity="fill_horizontal|center_horizontal"
            android:minHeight="50dp"
            android:layout_columnSpan="4"
            android:layout_marginBottom="5dp"
            android:textColor="#080707" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vote Count"
            android:id="@+id/vote_count"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#080707" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolved Status"
            android:id="@+id/resolved_status"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:textColor="#080707" />

        <RadioGroup
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:layout_row="4"
            android:layout_column="1"
            android:id="@+id/vote"
            android:layout_columnSpan="4"
            android:layout_marginLeft="33dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote Up"
                android:id="@+id/voteup"
                android:layout_gravity="left"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote Down"
                android:id="@+id/votedown"
                android:checked="false" />
        </RadioGroup>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Resolved"
            android:id="@+id/resolve"
            android:layout_row="5"
            android:layout_column="4"
            android:checked="false"
            android:layout_columnSpan="1"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_columnSpan="4"
            android:hint="Wanna Comment Something "
            android:minHeight="50dp"
            android:textSize="15sp"
            android:minWidth="400dp"
            android:maxWidth="400dp"
            android:layout_marginBottom="5dp"
            android:textColor="#080707"
            android:textAlignment="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post My Comment"
            android:id="@+id/button"
            android:layout_row="7"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_marginLeft="40dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_columnSpan="4" />
    </GridLayout>
</LinearLayout>